.top{
  height: 100%;
  background-color: #f5f5f5;
}
.top .picker{
  position: relative;
  top: 30rpx;
  width: 100%;
  background-color: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.top picker{
  width: 90%;
  margin: auto;
}
.top .picker text{
  position: absolute;
  right: 5%;
}
.top .content{
  position: relative;
  top: 50rpx;
  width: 90%;
  height: 30%;
  background-color: #fff;
  border-radius: 5px;
  margin: auto;
}
.top button{
  position: relative;
  top: 100rpx;
}