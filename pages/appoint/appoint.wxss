.top{
  height: 14%;
}
.body{
  width: 100%;
  height: 86%;
  background-color: #f5f5f5;
}
.topList .area{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList .time{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList .message{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList image{
  position: relative;
  left: calc(50% - 25rpx);
  width: 50rpx;
  height: 50rpx;
}
.topList text{
  position: relative;
  top: 50rpx;
  left: 30rpx;
  color: #8c8c8c;
}
.topList .arrow{
  position: relative;
  top: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.body .bodyList{
  position: relative;
  top: 50rpx;
  height: 800rpx;
  width: 100%;
}
.body swiper{
  height: 100%;
  width: 82%;
  margin: auto;
}
.body image{
  width: 100%;
  height: 92%;
  border-radius: 8px;
}
.body .btnlist{
  position: relative;
  top: 50rpx;
}
.body .btnlist button{
  width: 28%;
  margin: 10rpx 80rpx;
  float: left;
}