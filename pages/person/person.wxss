.top{
  height: 30%;
  background-color: turquoise;
}
.top .hand{
  position: relative;
  top: 40%;
  left: calc(50% - 100rpx);
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}
.body{
  height: 70%;
  background-color: #f5f5f5;
}
.body .bodylist{
  position: relative;
  top: 100rpx;
  width: 90%;
  background-color: #fff;
  margin: auto;
  border-radius: 8px;
  overflow: hidden;
}
.body .bodylist .text{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f5f5f5;
}
.body .bodylist .logo{
  float: left;
  height: 45rpx;
  width: 45rpx;
  margin: 28rpx;
}
