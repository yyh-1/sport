.top{
  height: 14%;
}
.body{
  width: 100%;
  height: 86%;
  background-color: #f5f5f5;
}
.topList .area{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList .area text{
  position: relative;
  top: 50rpx;
  left: 30rpx;
  color: #00aa00;
}
.topList .time{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList .message{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList image{
  position: relative;
  left: calc(50% - 25rpx);
  width: 50rpx;
  height: 50rpx;
}
.topList text{
  position: relative;
  top: 50rpx;
  left: 30rpx;
  color: #8c8c8c;
}
.topList .arrow{
  position: relative;
  top: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.body .bodylocation{
  position: relative;
  top: 10rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.body .bodylocation .text1{
  margin-left: 40rpx;
}
.body .bodylocation .text2{
  position: absolute;
  right: 110rpx;
}
.body .bodylocation image{
  position: absolute;
  right: 30rpx;
  width: 35rpx;
  height: 35rpx;
}
.body .bodydate{
  position: relative;
  top: 30rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.body .bodydate picker{
  width: 100%;
  margin-left: 40rpx;
}
.body .bodydate text{
  position: absolute;
  right: 90rpx;
}
.body .bodytime{
  position: relative;
  top: 50rpx;
  width: 90%;
  height: 70%;
  margin: auto;
  background-color: #fff;
  border-radius: 5px;
}
.body .bodytime .morning{
  position: relative;
  top: 30rpx;
  height: 35%;
  width: 90%;
  margin: auto;
}
.body .bodytime image{
  width: 15rpx;
  height: 15rpx;
}
.body .bodytime text{
  color: #8c8c8c;
  margin-left: 15rpx;
}
.body .bodytime button{
  position: relative;
  top: 20rpx;
  width: 46%;
  height: 80rpx;
  border: 1px solid #fff;
  border-radius: 8px;
  float: left;
  margin: 12rpx;
  background-color: #fff;
  box-shadow: 0 0 5px #8c8c8c;
}
.body .bodytime .moon{
  position: relative;
  top: 30rpx;
  height: 35%;
  width: 90%;
  margin: auto;
}
.body .bodytime .evening{
  position: relative;
  top: 30rpx;
  height: 35%;
  width: 90%;
  margin: auto;
}