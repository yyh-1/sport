.top{
  height: 14%;
}
.body{
  width: 100%;
  height: 86%;
  background-color: #f5f5f5;
}
.topList .area{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList .area text{
  position: relative;
  top: 50rpx;
  left: 30rpx;
  color: #00aa00;
}
.topList .time text{
  position: relative;
  top: 50rpx;
  left: 30rpx;
  color: #00aa00;
}
.topList .time{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList .message{
  width: 33.33%;
  margin-top: 50rpx;
  float: left;
}
.topList image{
  position: relative;
  left: calc(50% - 25rpx);
  width: 50rpx;
  height: 50rpx;
}
.topList text{
  position: relative;
  top: 50rpx;
  left: 30rpx;
  color: #8c8c8c;
}
.topList .arrow{
  position: relative;
  top: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.body .bodylocation{
  position: relative;
  top: 10rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.body .bodylocation .text1{
  margin-left: 40rpx;
}
.body .bodylocation .text2{
  position: absolute;
  right: 110rpx;
}
.body .bodylocation image{
  position: absolute;
  right: 30rpx;
  width: 35rpx;
  height: 35rpx;
}
.body .bodytime{
  position: relative;
  top: 20rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.body .bodytime .text1{
  margin-left: 40rpx;
}
.body .bodytime .text2{
  position: absolute;
  right: 110rpx;
}
.body .bodytime image{
  position: absolute;
  right: 30rpx;
  width: 35rpx;
  height: 35rpx;
}
.body .bodymessage{
  position: relative;
  top: 50rpx;
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  overflow: hidden;
}
.body .bodymessage .message{
  width: 90%;
  height: 33.3%;
  margin: auto;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
}
.body .bodymessage .message input{
  position: absolute;
  right: 5%;
}
.inputName, .placeholderName {
  text-align: right;
}
.body .bodyfriend{
  position: relative;
  top: 80rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.body .bodyfriend text{
  position: relative;
  left: 5%;
  color: #666666;
}
.body .bodyfriend picker{
  position: absolute;
  right: 10%;
}
.body .bodyfriend image{
  width: 45rpx;
  height: 45rpx;
}
.body .friendlist{
  position: relative;
  top: 100rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.body .friendid{
  position: relative;
  width: 20%;
  height: 80%;
  background-color: #c8c8c8;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 5px;
  display: flex;
  align-items: center;
}
.body .friendid text{
  position: absolute;
  left: 30rpx;
}
.body .friendid image{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 20rpx;
}
.body button{
  position: absolute;
  top: 85%;
  left: calc(28%);
}